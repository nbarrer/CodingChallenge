@{

}


@using (Html.BeginForm("SearchProfiles", "Profiles"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                       
        <div class="form-group">
            <div>@Html.Label("Title", htmlAttributes: new { @class = "control-label" })</div>
            <div class="col-md-10">
                @Html.TextBox("Title", (string)ViewBag.DefaultTitle, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Title", new { @class = "text-danger" })
            </div>
        </div> 

        <div class="form-group">
            <div>@Html.Label("Industry", htmlAttributes: new { @class = "control-label" })</div>
            <div class="col-md-10">
                @Html.TextBox("Industry", (string)ViewBag.DefaultIndustry, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("Industry", new { @class = "text-danger" })
            </div>
        </div> 

        <div class="form-group">
            <div>@Html.Label("Current Role", htmlAttributes: new { @class = "control-label" })</div>
            <div class="col-md-10">
                @Html.TextBox("CurrentRole", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessage("CurrentRole", new { @class = "text-danger" })
            </div>
        </div> 

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="clearButton" type="button" value="Clear Search" class="btn btn-default" onclick="location.href='@Url.Action("ClearSearch", "Profiles")'"/>
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
